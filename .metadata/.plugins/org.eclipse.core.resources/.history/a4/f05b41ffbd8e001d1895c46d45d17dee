package project.electro.server;

import java.time.LocalDateTime;

import javax.annotation.PostConstruct;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.security.crypto.password.PasswordEncoder;

import project.electro.server.entities.Administrator;
import project.electro.server.entities.User;
import project.electro.server.enums.PasswordStatusEnum;
import project.electro.server.enums.RoleEnum;
import project.electro.server.enums.StatusEnum;
import project.electro.server.services.UserService;

@SpringBootApplication
public class ElectroMain {

	@Autowired
	private PasswordEncoder encoder;
	
	@Autowired
	private UserService service;
	
	public static void main(String[] args) {
		SpringApplication.run(ElectroMain.class, args);
	}
	@PostConstruct
	private void init() {

		String pw = "$2a$10$yo21idfWR/XToXYqKQBGhOiITmuLvmKUfS9BI37xCRfXUVqQx/9OK";
		
		User user = new User();
		user.setCreatedDate(LocalDateTime.now());
		user.setPassword(pw);
		user.setPasswordStatus(PasswordStatusEnum.OK);
		user.setRole(RoleEnum.ADMINISTRATOR);
		user.setUsername("victor@mail.com");
		
		Administrator admin = new Administrator();
		admin.setUser(user);
		admin.setCreatedDate(LocalDateTime.now());
		admin.setCompany("c1");
		admin.setEmail("victor@mail.com");
		admin.setStatus(StatusEnum.FREE);
		
		
	}

}
